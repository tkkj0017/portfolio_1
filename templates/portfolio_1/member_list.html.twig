    <link href="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}css/style.css" rel="stylesheet">
    <title>会員一覧</title>
  </head>
  <body>
    <div id="nav">
      {% include 'navbar.html.twig' %}
    </div>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>お名前</th>
      <th>メール</th>
      <th>ユーザー名</th>
      <th>性別</th>
      <th>登録日時</th>
      <th>更新日時</th>
      <th>詳細リンク</th>
    </tr>
  {% for value in dataArr %}
    <tr>
      <td><a href="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}controller/member_detail.php?mem_id={{value.mem_id}}">{{value.mem_id}}</a></td>
      <td><span style="font-size:60%;">{{value.family_name_kana}}{{value.first_name_kana}}</span><br>
      {{value.family_name}}{{value.first_name}}</td>
      <td>{{value.email}}</td>
      <td>{{value.user_id}}</td>
      <td>{% if value.sex == '1' %}男性{% elseif value.sex == '2' %}女性{% endif %}</td>
      <td>{{value.regist_date}}</td>
      <td>{{value.update_date}}</td>
      <td><a href="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}controller/member_detail.php?mem_id={{value.mem_id}}">詳細</a></td>
    </tr>
  {% endfor %}
  </table>
