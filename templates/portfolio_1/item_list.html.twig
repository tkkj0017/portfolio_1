      <div id="item_list">
        <div id="item_search">
          <form method="post" action="item_search.php">
            商品検索<input type="text" name="search_word" style="width: 60px height: 22px;" value="{{post.search_word}}"><input type="submit" class="btn btn-outline-dark btn-sm" name="item_search" value="検索">
          </form> 
          {% if errArr | length > 0 %}
            <p><span class="red">{{errArr}}</span></p>
          {% endif %}
        </div>
        <div class="item">
          {% for value in dataArr %}
            <ul>
              <li class="image"><a href="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}controller/item_detail.php?item_id={{value.item_id}}"><img src="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}img/{{value.image}}" class="img-fluid rounded" alt="{{value.item_name}}"></a></li>
              <li class="name"><a href="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}controller/item_detail.php?item_id={{value.item_id}}">{{value.item_name}}</a></li>
              <li class="price">&yen;{{value.price|number_format(0, '.', ',')}}</li>
              
              <li class="detail"><a href="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}controller/item_detail.php?item_id={{value.item_id}}">詳細</a></li>
            </ul>
          {% endfor %}
        </div>
      </div>
    </div>
