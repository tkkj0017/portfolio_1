<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}js/portfolio_1.js"></script>


    <link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Noto+Serif+JP|Open+Sans&display=swap" rel="stylesheet">
    <link href="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}css/style.css" rel="stylesheet">

    {# Font Awesome #}
    {# <script src="https://kit.fontawesome.com/fd25b5e20c.js" crossorigin="anonymous"></script> #}
    <title>トップページ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>
  <body>
    {# お試し #}
    <div id="nav">
      {% include 'navbar.html.twig' %}
    </div>
    <div id="wrapper" style="margin-top: 50px;">
      <div class="category_menu">
        {% include 'category.html.twig' %}
      </div>

      <div id="item_list">
        <div id="item_search" class="container mb-4">
          <form method="post" action="item_search.php">
            <input type="text" name="search_word" style="width: 60px height: 22px;" value="{{post.search_word}}">
            <input type="submit" class="btn btn-outline-dark btn-sm" name="item_search" value="商品検索">
          </form> 
          {% if errArr | length > 0 %}
            <p><span class="red">{{errArr}}</span></p>
          {% endif %}
        </div>
        <div class="item container">
          <div class="row justify-content-left">
            {% for value in dataArr %}
              <div class="col-md-12 col-lg-4 mb-2">
                <div class="card">
                  <div class="card-header">
                    <a href="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}controller/item_detail.php?item_id={{value.item_id}}">{{value.item_name}}</a>
                  </div>
                  <div class="card-body">
                    <img src="{{constant('portfolio_1\\Bootstrap::ENTRY_URL')}}img/{{value.image}}" class="img-fluid rounded" alt="{{value.item_name}}">
                  </div>
                  <div class="price card-body">
                    &yen;{{value.price|number_format(0, '.', ',')}}
                  </div>
                </div>
              </div>
            {% endfor %}
          <div>
        </div>
      </div>
    </div>
  </body>
</html>